<div class="container">
  <%= render 'header' %>
  <div class="content">

    <div class="notice"><%= notice %></div>

    <h2>つぶやき一覧</h2>
    <div class="index_table">
      <table>
        <% @blogs.each do |blog| %>
          <tr class="table_content">
            <td><%= blog.content %></td>
          </tr>
          <tr class="table_bottom">
            <!-- <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td> -->
            <td><%= link_to "編集", edit_blog_path(blog.id), { class: "btn btn_edit" } %></td>
            <td><%= link_to "削除", blog_path(blog.id), method: :delete, class: "btn btn_delete", data: { confirm: '本当に削除していいですか？' } %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
  <%= render 'footer' %>
</div>
